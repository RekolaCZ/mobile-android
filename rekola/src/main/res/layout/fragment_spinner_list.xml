<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/base_pink"
                android:orientation="vertical"
                tools:context="cz.rekola.app.fragment.natural.SpinnerListFragment">


    <ListView
        android:id="@+id/lv_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:listSelector="@drawable/button_pink"
        android:layout_marginBottom="@dimen/default_screen_margin"
        android:layout_marginLeft="@dimen/default_screen_margin"
        android:layout_marginRight="@dimen/default_screen_margin"
        android:layout_marginTop="49dp">
    </ListView>

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="right|end"
        android:layout_marginRight="@dimen/default_screen_margin"
        android:layout_marginTop="21dp"
        android:src="@drawable/btn_close"
        />


</RelativeLayout>

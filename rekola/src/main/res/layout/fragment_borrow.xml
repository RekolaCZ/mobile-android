<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    style="@style/Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        style="@style/Layout"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="@dimen/default_screen_margin"
        android:layout_marginBottom="@dimen/default_screen_margin"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_rekola_logo"
            style="@style/ImageView"
            android:paddingRight="10dp"
            android:paddingLeft="10dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="50dp"
            android:src="@drawable/logo_recola_web"/>

        <TextView
            android:id="@+id/txt_borrow_info"
            style="@style/TextView"
            android:layout_marginRight="@dimen/default_screen_margin"
            android:layout_marginLeft="@dimen/default_screen_margin"
            android:layout_marginBottom="17dp"
            android:gravity="center"
            fontPath="@string/font_roboto_medium"
            android:text="@string/borrow_info_1"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/txt_code_hint_keyboard_hidden"
            style="@style/CodeHintTextView"
            android:layout_marginBottom="59dp"/>

        <TextView
            android:id="@+id/txt_code_hint"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="@dimen/default_screen_margin"
            android:layout_marginRight="@dimen/default_screen_margin"
            android:background="@color/light_grey"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/borrow_code_hint"
            android:textColor="@color/grey9"
            android:textSize="18sp"
            />

        <TextView
            android:id="@+id/txt_code_hint_keyboard_visible"
            android:visibility="gone"
            style="@style/CodeHintTextView"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="6dp"/>

        <Button
            android:id="@+id/btn_borrow"
            style="@style/ButtonPink"
            android:layout_height="55dp"
            android:layout_marginTop="17dp"
            android:layout_marginRight="@dimen/default_screen_margin"
            android:layout_marginLeft="@dimen/default_screen_margin"
            fontPath="@string/font_roboto_medium"
            android:textAllCaps="true"
            android:text="@string/borrow_borrow"
            android:textSize="21sp"
            />

    </LinearLayout>
</ScrollView>



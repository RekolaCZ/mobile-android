<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    style="@style/Layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    >

    <LinearLayout
        style="@style/LayoutMargin"
        android:layout_gravity="center_vertical">

        <ImageView
            style="@style/ImageView"
            android:padding="10dp"
            android:adjustViewBounds="true"
            android:layout_marginBottom="20dp"
            android:src="@drawable/logo_recola_web"/>

        <TextView
            style="@style/TextView"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/borrow_info_1"
            android:textSize="18sp"/>


        <TextView
            style="@style/TextView"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="@string/borrow_info_2"
            android:textColor="@color/grey10"
            android:textSize="14sp"/>

        <include
            android:id="@+id/txt_bike_code"
            layout="@layout/view_code"
            android:imeOptions="actionDone"/>

        <Button
            android:id="@+id/btn_borrow"
            style="@style/ButtonPink"
            android:textAllCaps="true"
            android:text="@string/borrow_borrow"
            android:textSize="21sp"
            />

    </LinearLayout>
</ScrollView>



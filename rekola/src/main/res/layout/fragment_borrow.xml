<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/Layout">

	<ScrollView
		style="@style/Layout">

		<LinearLayout
			style="@style/Layout"
			android:layout_gravity="center_vertical"
			android:layout_margin="@dimen/grid_8"
			android:gravity="center">

			<TextView
				style="@style/TextView"
				android:textColor="@color/gray_2"
				android:textSize="@dimen/text_header"
				android:layout_marginBottom="@dimen/margin_large"
				android:text="Borrow Bike"/>

			<TextView
				style="@style/TextView"
				android:textColor="@color/gray_2"
				android:layout_marginBottom="@dimen/margin_large"
				android:gravity="center"
				android:text="Code can be found on the side of the wheel on bike."/>

			<EditText
				android:id="@+id/bike_code"
				style="@style/EditText"
				android:textSize="@dimen/text_xxlarge"
				android:hint="6-digit code"
				android:maxLength="@integer/bike_code_length"
				android:inputType="number"
				android:layout_gravity="center" />

			<Button
				android:id="@+id/borrow"
				style="@style/Button"
				android:text="Borrow a bike"/>

			<TextView
				style="@style/TextView"
				android:textColor="@color/gray_2"
				android:layout_marginTop="@dimen/margin_large"
				android:gravity="center"
				android:text="After entering the code, you will receive a bike lock code. From that moment, you pay by your karma for the running time."/>

		</LinearLayout>

	</ScrollView>

</FrameLayout>
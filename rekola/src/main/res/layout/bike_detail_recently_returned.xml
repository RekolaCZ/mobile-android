<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <TextView
        android:id="@+id/txt_vehicle_name"
        style="@style/BikeDetailTextViewTitle"
        android:layout_marginBottom="20dp"
        android:text="@string/bike_detail_recently_returned"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_rec_returned_date"
            style="@style/BikeDetailTextViewBorrowedDate"
            android:layout_marginEnd="37dp"
            android:layout_marginRight="37dp"
            android:drawableLeft="@drawable/ic_calendar"
            android:drawableStart="@drawable/ic_calendar"/>

        <TextView
            android:id="@+id/txt_rec_returned_time"
            style="@style/BikeDetailTextViewBorrowedDate"
            android:drawableLeft="@drawable/ic_clock"
            android:drawableStart="@drawable/ic_clock"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_rec_returned_description"
        style="@style/TextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:textColor="@color/grey5"/>

</LinearLayout>
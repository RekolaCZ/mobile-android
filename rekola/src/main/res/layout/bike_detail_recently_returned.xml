<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">


    <TextView
        android:id="@+id/txt_vehicle_name"
        style="@style/TitleTextView"
        android:text="@string/bike_detail_recently_returned"
        android:textSize="@dimen/text_xlarge"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_rec_returned_date"
            style="@style/TextView"
            android:drawableLeft="@drawable/icon_calendar"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/icon_calendar"
            android:text="14.05."
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/dark_pink2"/>

        <TextView
            android:id="@+id/txt_rec_returned_time"
            style="@style/TextView"
            android:drawableLeft="@drawable/icon_clock"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/icon_clock"
            android:text="08:36"
            android:textColor="@color/dark_pink2"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_rec_returned_description"
        style="@style/TextView"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:text="Pred galerii Myslbek na rohu u znacky"
        android:textColor="@color/grey5"/>

</LinearLayout>
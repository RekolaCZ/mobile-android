<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/vehicleName"
        style="@style/TitleTextView"
        android:text="@string/bike_detail_recently_returned"
        android:textSize="@dimen/text_xlarge"
        android:layout_marginBottom="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rec_returned_date"
            style="@style/TextView"
            android:drawableLeft="@drawable/icon_calendar"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/icon_calendar"
            android:text="14.05."
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/dark_pink2" />

        <TextView
            android:id="@+id/rec_returned_time"
            style="@style/TextView"
            android:drawableLeft="@drawable/icon_clock"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/icon_clock"
            android:text="08:36"
            android:textColor="@color/dark_pink2" />

    </LinearLayout>

</LinearLayout>
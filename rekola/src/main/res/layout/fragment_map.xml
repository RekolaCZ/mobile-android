<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/Layout">

    <com.google.android.gms.maps.MapView
        android:id="@+id/mapView"
		style="@style/Layout"/>

	<LinearLayout
		android:id="@+id/map_overlay"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_gravity="bottom"
		android:orientation="vertical"
		android:visibility="gone">

		<ImageView
			android:id="@+id/map_overlay_close"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:paddingLeft="@dimen/grid_8"
			android:src="@drawable/btn_close"/>

		<LinearLayout
			style="@style/Layout"
			android:orientation="horizontal"

			android:background="@color/pink_1">

			<ScrollView
				style="@style/Layout"
				android:padding="@dimen/grid_2"
				android:layout_weight="1">

				<LinearLayout
					style="@style/Layout"
					android:layout_height="wrap_content">

					<TextView
						android:id="@+id/map_overlay_name"
						style="@style/TextViewOverlay"
						android:textSize="@dimen/text_xlarge"
						android:textStyle="bold"
						android:text="qwer"/>

					<TextView
						android:id="@+id/map_overlay_street"
						style="@style/TextViewOverlay"
						android:textSize="@dimen/text_large"/>

					<TextView
						android:id="@+id/map_overlay_note"
						style="@style/TextViewOverlay"
						android:textSize="@dimen/text_small"/>

					<TextView
						android:id="@+id/map_overlay_description"
						style="@style/TextViewOverlay"
						android:textSize="@dimen/text_small" />

				</LinearLayout>

			</ScrollView>

			<LinearLayout
				style="@style/Layout"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="0"
				android:padding="@dimen/grid_2"
				android:layout_gravity="center">

				<ImageView
					android:id="@+id/map_overlay_route"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/grid_1"
					android:src="@drawable/btn_route"/>

				<ImageView
					android:id="@+id/map_overlay_bike_detail"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_margin="@dimen/grid_1"
					android:src="@drawable/btn_bike_detail_normal"/>

			</LinearLayout>

		</LinearLayout>

	</LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:id="@+id/bike_detail_toolbar_white"
                android:layout_width="fill_parent"
             android:layout_height="@dimen/bike_detail_toolbar_height"
                android:layout_gravity="fill_horizontal">


    <ImageView
        android:id="@+id/img_action_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCustomOptionsItemSelected"
        android:paddingTop="10dp"
        android:paddingLeft="4dp"
        android:src="@drawable/ic_back_arrow_pink"/>


    <ImageView
        android:id="@+id/img_action_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onCustomOptionsItemSelected"
        android:paddingTop="6dp"
        android:paddingRight="4dp"
        android:layout_gravity="right"
        android:src="@drawable/actionbar_ic_lock_bike_detail"/>


</FrameLayout>
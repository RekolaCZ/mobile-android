<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/bike_detail_toolbar_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="?attr/actionBarSize"
    android:layout_gravity="fill_horizontal">

    <ImageView
        android:id="@+id/img_action_back"
        style="@style/BikeDetailActionBack"
        android:layout_gravity="center_vertical"
        android:background="?attr/selectableItemBackground"
        android:padding="8dp"
        android:src="@drawable/ic_back_arrow_pink"/>


    <ImageView
        android:id="@+id/img_action_lock"
        style="@style/BikeDetailActionLock"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="center_vertical|right"

        android:padding="8dp"
        android:src="@drawable/actionbar_ic_lock_bike_detail"/>

</FrameLayout>
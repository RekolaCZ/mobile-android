<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:layout_marginBottom="23dp"
              android:orientation="vertical">


    <TextView
        android:id="@+id/txt_vehicle_name"
        style="@style/BikeDetailTextViewTitle"
        android:layout_marginBottom="20dp"
        android:text="@string/bike_detail_equipments"/>


    <!-- equipments will be dynamically added in code (is loaded via api)-->
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarStyle="outsideInset"
        android:layout_marginLeft="@dimen/default_screen_margin"
        android:layout_marginRight="@dimen/default_screen_margin"
        android:layout_marginBottom="14dp">

        <LinearLayout
            android:id="@+id/ll_equipments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
        </LinearLayout>

    </HorizontalScrollView>

    <Button
        android:id="@+id/btn_equipments_detail"
        style="@style/TextView"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:background="@drawable/button_green_border"
        android:text="@string/bike_detail_equipment_info"
        android:textColor="@drawable/button_green_text"
        />

</LinearLayout>
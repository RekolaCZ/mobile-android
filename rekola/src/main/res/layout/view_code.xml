<?xml version="1.0" encoding="utf-8"?>

<cz.rekola.app.view.CodeView xmlns:android="http://schemas.android.com/apk/res/android"
                             android:layout_width="match_parent"
                             android:layout_height="wrap_content"
                             android:background="@color/light_grey"
                             android:padding="10dp">

    <TextView
        android:id="@+id/txt_code_hint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"
        android:padding="10dp"
        android:textColor="@color/grey9"
        android:text="@string/borrow_code_hint"
        />

    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:weightSum="6"
        >

        <cz.rekola.app.view.EditTextPoint
            android:id="@+id/txt_code_0"
            style="@style/EditTextPin"
            />

        <cz.rekola.app.view.EditTextPoint
            android:id="@+id/txt_code_1"
            style="@style/EditTextPin"
            />

        <cz.rekola.app.view.EditTextPoint
            android:id="@+id/txt_code_2"
            style="@style/EditTextPin"
            />

        <cz.rekola.app.view.EditTextPoint
            android:id="@+id/txt_code_3"
            style="@style/EditTextPin"
            />

        <cz.rekola.app.view.EditTextPoint
            android:id="@+id/txt_code_4"
            style="@style/EditTextPin"
            />

        <!-- according to design last EditText is without point-->
        <EditText
            android:id="@+id/txt_code_5"
            style="@style/EditTextPin"
            />

    </LinearLayout>


</cz.rekola.app.view.CodeView>
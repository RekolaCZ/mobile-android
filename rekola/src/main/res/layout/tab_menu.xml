<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/tab_menu"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="51dp"
                android:layout_gravity="fill_horizontal"
                android:animateLayoutChanges="true"
                android:background="@color/base_green">

    <ImageView
        android:id="@+id/img_action_lock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:onClick="onCustomOptionsItemSelected"
        android:paddingBottom="@dimen/action_bar_icon_padding_bottom"
        android:paddingLeft="@dimen/action_bar_icon_padding_left"
        android:paddingTop="@dimen/action_bar_icon_padding_top"
        android:src="@drawable/actionbar_ic_lock"/>

    <ImageView
        android:id="@+id/img_action_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:onClick="onCustomOptionsItemSelected"
        android:paddingBottom="@dimen/action_bar_icon_padding_bottom"
        android:paddingTop="@dimen/action_bar_icon_padding_top"
        android:src="@drawable/actionbar_ic_map"/>

    <ImageView
        android:id="@+id/img_action_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:onClick="onCustomOptionsItemSelected"
        android:paddingBottom="@dimen/action_bar_icon_padding_bottom"
        android:paddingRight="@dimen/action_bar_icon_padding_right"
        android:paddingTop="@dimen/action_bar_icon_padding_top"
        android:src="@drawable/actionbar_ic_profile"/>

</RelativeLayout>
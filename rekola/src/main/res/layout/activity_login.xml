<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Layout"
    android:background="@color/base_pink">

    <ScrollView style="@style/Layout">

        <LinearLayout
            style="@style/Layout"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/text_header"
            android:gravity="center">

            <TextView
                android:id="@+id/registration"
                style="@style/TextView"
                android:layout_gravity="top|right"
                android:fontFamily="sans-serif-medium"
                android:text="@string/login_registration"
                android:textAllCaps="true"
                android:textSize="@dimen/text_medium" />

            <ImageView
                style="@style/LogoImageView"
                android:src="@drawable/logo" />

            <EditText
                android:id="@+id/username"
                style="@style/EditTextPinkFilled"
                android:hint="@string/login_username_hint"
                android:imeOptions="actionNext"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/password"
                style="@style/EditTextPinkFilled"
                android:hint="@string/login_password_hint"
                android:imeOptions="actionDone"
                android:inputType="textPassword" />

            <Button
                android:id="@+id/login"
                style="@style/SignInButton"
                android:layout_below="@id/password"
                android:text="@string/login_log_in" />

            <TextView
                android:id="@+id/recover_password"
                style="@style/TextView"
                android:layout_margin="@dimen/grid_4"
                android:text="@string/login_forgot_password"
                android:textColor="@color/white"
                android:textSize="@dimen/text_medium" />

        <LinearLayout
            style="@style/Layout"
            android:orientation="horizontal"
            android:alpha="0.4"
            android:layout_gravity="center_vertical"
            android:gravity="center">

            <TextView
                style="@style/TextView"
                android:text="@string/login_ackee"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/text_small"
                android:padding="5dp"
                />

            <ImageView
                style="@style/ImageView"
                android:src="@drawable/logo_ackee_bw"
                android:padding="5dp"
                />
        </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <include layout="@layout/reset_overlay" />

    <include layout="@layout/loading_overlay" />

    <include layout="@layout/message_bar" />

</FrameLayout>
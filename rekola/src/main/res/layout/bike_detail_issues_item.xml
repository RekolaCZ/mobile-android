              android:layout_height="wrap_content"
              android:layout_marginLeft="@dimen/default_screen_margin"
              android:layout_marginRight="@dimen/default_screen_margin"
              android:layout_marginTop="7dp"
              android:layout_marginBottom="13dp"
              android:orientation="vertical">


    <!-- coloring with SpannableStringBuilder in BikeDetailAdapter-->
    <TextView
        android:id="@+id/txt_user_name_and_datetime"
        style="@style/TextView"
        android:textSize="14sp"
        />


    <TextView
        android:id="@+id/txt_issue_description"
        style="@style/TextView"
        android:textColor="@color/grey11"
        android:textSize="14sp"
        />

</LinearLayout>
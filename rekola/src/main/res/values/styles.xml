<resources>

    <style name="Layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LayoutMargin" parent="Layout">
        <item name="android:layout_margin">@dimen/default_screen_margin</item>
    </style>

    <style name="LayoutMargin26" parent="Layout">
        <item name="android:layout_margin">26dp</item>
    </style>

    <!-- global styles for views: -->
    <style name="TextView" parent="@android:style/Widget.Holo.Light.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Button" parent="@android:style/Widget.Holo.Light.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button</item>-->
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:textColor">@color/text_inverse</item>

    </style>

    <style name="EditText" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/edittext</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:textSize">@dimen/text_medium</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">@dimen/grid_3</item>
        <item name="android:paddingRight">@dimen/grid_3</item>
    </style>

    <style name="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditTextPinkFilled" parent="EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:background">@drawable/edit_text_fill</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@drawable/edit_text_fill_hint_color</item>
    </style>

    <style name="EditTextPinkBorder" parent="TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/edit_text_border</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorHint">@color/gray_2</item>
        <item name="android:gravity">top|left</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="TextViewGreenBorder" parent="TextView">
        <item name="android:background">@drawable/border_green</item>
        <item name="android:textColor">@color/base_green</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ButtonPink" parent="Button">
        <item name="android:background">@drawable/button_pink</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonGrey" parent="Button">
        <item name="android:background">@drawable/button_grey</item>
        <item name="android:textColor">@color/grey4</item>
    </style>

    <style name="TitleTextView" parent="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
    </style>

    <style name="ImageViewBikeImage" parent="ImageView">
        <item name="android:layout_height">80dp</item>
    </style>


    <!-- About app -->
    <style name="AboutTextViewCreated" parent="TextView">
        <item name="android:textColor">@color/grey7</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="AboutImageViewLogo" parent="ImageView">
        <item name="android:paddingLeft">60dp</item>
        <item name="android:paddingStart">60dp</item>
        <item name="android:paddingEnd">60dp</item>
        <item name="android:paddingRight">60dp</item>
    </style>

    <style name="AboutImageViewBackground" parent="ImageView">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:paddingLeft">28dp</item>
        <item name="android:paddingStart">28dp</item>
        <item name="android:layout_gravity">end|bottom</item>
    </style>

    <!-- Profile styles -->
    <style name="ProfileTextViewUserName" parent="TextView">
        <item name="android:textColor">@color/grey_dark</item>
        <item name="fontPath">@string/font_roboto_medium</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="ProfileTextViewMemberShipLabel" parent="TextView">
        <item name="fontPath">@string/font_roboto_light</item>
        <item name="android:textColor">@color/dark_pink2</item>
    </style>

    <style name="ProfileTextViewMemberShipEndDate" parent="TextView">
        <item name="android:textColor">@color/pink_1</item>
        <item name="fontPath">@string/font_roboto_medium</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="ProfileTextViewGridDescription" parent="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/grey11</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <style name="ProfileTextViewGridValue" parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">end</item>
        <item name="android:layout_marginBottom">15dp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">14sp</item>
        <item name="fontPath">@string/font_roboto_medium</item>
    </style>

    <!-- Borrowed bike styles -->

    <style name="BorrowedBikeTextViewBikeName" parent="TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="BorrowedBikeTextViewBorrowed" parent="TextView">
        <item name="android:paddingEnd">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:textSize">14sp</item>
    </style>


    <style name="BorrowedBikeTextViewLockCode" parent="TextView">
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BorrowedBikeTextViewLockLabel" parent="TextView">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/gray_2</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="IconImageView" parent="ImageView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>


    <style name="SignInButton" parent="Button">
        <item name="android:background">@drawable/button_sign_in</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/light_green</item>
    </style>

    <style name="TextViewWhite" parent="TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Borrow styles -->
    <style name="EditTextBorrow" parent="@android:style/Widget.Holo.Light.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/very_light_pink</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:textSize">@dimen/text_xxlarge</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">@dimen/grid_3</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <style name="CodeHintTextView" parent="TextView">
        <item name="android:gravity">center</item>
        <item name="android:layout_marginRight">@dimen/default_screen_margin</item>
        <item name="android:layout_marginLeft">@dimen/default_screen_margin</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey10</item>
        <item name="android:text">@string/borrow_info_2</item>
    </style>


    <!-- Bike styles -->
    <style name="TextViewWarning" parent="TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <!-- Pin code -->
    <style name="EditTextPin" parent="TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">60sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:inputType">numberSigned</item>
        <item name="android:gravity">center</item>
        <item name="android:digits">0123456789</item>
        <item name="android:maxLength">1</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <!--    textCursorDrawable null, because of some bug, that caused invisible cursor-->

    <!-- Map overlay -->
    <style name="MapOverlayTextViewWarning" parent="TextView">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/warning_gray</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Bike detail -->
    <style name="BikeDetailTextViewTitle" parent="TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BikeDetailTextViewBorrowedDate" parent="TextView">
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_pink2</item>
        <item name="android:drawablePadding">5dp</item>
    </style>


</resources>

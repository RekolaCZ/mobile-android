<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:actionDropDownStyle">@style/ActionBar.DropDown</item>
        <item name="android:actionMenuTextColor">@color/UNRESOLVED</item>
        <item name="android:actionBarItemBackground">@drawable/selector</item>
        <item name="android:dropDownListViewStyle">@style/ActionBar.DropDownListView</item>

        <!-- remove shadow below action bar -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- widget styles: -->
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:buttonStyle">@style/Button</item>
        <item name="android:editTextStyle">@style/EditText</item>

        <!-- other global styles: -->
        <item name="android:windowBackground">@color/background_window</item>

    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/base_pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/dark_pink</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
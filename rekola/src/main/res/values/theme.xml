<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="GreenTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarItemBackground">@drawable/selector</item>

        <!-- remove shadow below action bar -->
        <item name="android:windowContentOverlay">@null</item>

        <!-- widget styles: -->
        <item name="android:textViewStyle">@style/TextView</item>
        <item name="android:buttonStyle">@style/Button</item>


        <!-- other global styles: -->
        <item name="android:windowBackground">@color/background_window</item>

        <item name="android:actionBarSize">@dimen/action_bar_size</item>
        <item name="actionBarSize">@dimen/action_bar_size</item>
    </style>

    <style name="PinkTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/base_pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/dark_pink</item>
    </style>

</resources>